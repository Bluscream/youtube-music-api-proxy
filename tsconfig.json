{
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2020",
        "module": "AMD",
        "moduleResolution": "node",
        "outFile": "wwwroot/app.js",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/js/main.ts",
        "src/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}